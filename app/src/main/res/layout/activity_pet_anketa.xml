<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.anketa.PetAnketa">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="У вас есть домашний питомец?"
            />

            <RadioGroup
                    android:id="@+id/q1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >

                <RadioButton
                        android:id="@+id/q1_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Нет"
                />

                <RadioButton
                        android:id="@+id/q1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Да (уточните, пожалуйста, какой):"
                />

                <EditText
                        android:id="@+id/q1_other"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                />

            </RadioGroup>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Какое животное, по Вашему мнению:"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Самое красивое"
            />
            <EditText
                    android:id="@+id/q2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Самое прелестное"
            />
            <EditText
                    android:id="@+id/q2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Самое гадкое"
            />
            <EditText
                    android:id="@+id/q2_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />


            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Ваше самое любимое животное :"
            />
            <RadioGroup
                    android:id="@+id/q3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >

                <RadioButton
                        android:id="@+id/q3_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Собака"
                />

                <RadioButton
                        android:id="@+id/q3_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Кошка"
                />

                <RadioButton
                        android:id="@+id/q3_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Попугай"
                />

                <RadioButton
                        android:id="@+id/q3_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Пони"
                />

                <RadioButton
                        android:id="@+id/q3_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Хомяк"
                />

            </RadioGroup>


            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Каким домашним любимцем Вы бы в будущем хотели обзавестись?"
            />
            <EditText
                    android:id="@+id/q4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Каким животным Вы бы никогда не обзавелись?"
            />
            <EditText
                    android:id="@+id/q5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Какая порода собак Ваша любимая?"
            />
            <EditText
                    android:id="@+id/q6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Решая вопрос обзавестись ли домашним питомцем, Вы обсуждаете:"
            />

            <CheckBox
                    android:id="@+id/q7_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Сложность ухода за животным"
            />
            <CheckBox
                    android:id="@+id/q7_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Расходы на воспитание животного и уход за ним"
            />
            <CheckBox
                    android:id="@+id/q7_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Черты характера животного"
            />
            <CheckBox
                    android:id="@+id/q7_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Покупную цену"
            />
            <CheckBox
                    android:id="@+id/q7_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Опасность / Безопасность животного"
            />
            <CheckBox
                    android:id="@+id/q7_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Другие вещи"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />

            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="E-MAIL"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@android:color/darker_gray"
                  android:layout_margin="15dp"
            />

            <Button
                    android:id="@+id/success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Завершить"
                    android:onClick="submit"
            />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
